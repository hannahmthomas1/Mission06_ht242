@{
    ViewData["Title"] = "Delete Entry";
}

@model movieEntry

    <br />
    <br />
    <h1>Confirm Deletion</h1>
    <br />
    <h2>Are you sure you want to delete this title from the collection?</h2>
    <br />
    <br />

    <!-- Delete and cancel buttons-->
    <form method="post" asp-controller="Home" asp-action="Delete">
        <button type="submit">Delete</button>
        <br />
        <a asp-controller="Home" asp-action="movieList" class="btn btn-primary">Cancel</a>

        <!-- passes entry id to view -->
        <input type="hidden" asp-for="EntryID" />
    </form>